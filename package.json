{
	"name": "ibmi-code",
	"displayName": "ibmi-code",
	"description": "IBM i tools for Code",
	"version": "0.0.1",
	"author": {
		"name": "Liam Barry Allan", 
		"url": "https://worksofbarry.com"
	},
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ibmi-code.connect",
		"onView:memberBrowser"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ibmi-code.connect",
				"title": "IBM i: Connect"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ibmi-explorer",
					"title": "IBM i",
					"icon": "media/as400.svg"
				}
			]
		},
		"views": {
			"ibmi-explorer": [
				{
					"id": "memberBrowser",
					"name": "Member Browser",
					"contextualTitle": "Member Browser",
					"icon": "media/as400.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "memberBrowser",
				"contents": "No connection found.\n[Connect to an IBM i](command:ibmi-code.connect)"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.53.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"csv-parse": "^4.15.1",
		"node-ssh": "^11.1.1",
		"tmp": "^0.2.1"
	}
}
